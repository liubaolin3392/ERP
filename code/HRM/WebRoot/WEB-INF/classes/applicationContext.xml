<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="com.chinasoft.model"></context:component-scan>


	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"></property>
		<property name="url"
			value="jdbc:sqlserver://localhost:1433;databaseName=HRM">
		</property>
		<property name="username" value="sa"></property>
		<property name="password" value="123456789"></property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.SQLServerDialect
				</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.chinasoft.model.entity.Candidate</value>
				<value>com.chinasoft.model.entity.RecruitInfo</value>
				<value>com.chinasoft.model.entity.TrainPlan</value>
				<value>com.chinasoft.model.entity.TrainProgram</value>
				<value>com.chinasoft.model.entity.Contract</value>
				<value>com.chinasoft.model.entity.Salary</value>
				<value>com.chinasoft.model.entity.TrainFeedback</value>
				<value>
					com.chinasoft.model.entity.TrainEvaluation
				</value>
				<value>
					com.chinasoft.model.entity.PersonnelChange
				</value>
				<value>com.chinasoft.model.entity.Employee</value>
				<value>com.chinasoft.model.entity.Attendance</value>
				<value>com.chinasoft.model.entity.TrainApply</value>
			</list>
		</property>
	</bean>
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<tx:annotation-driven transaction-manager="transactionManager" />


