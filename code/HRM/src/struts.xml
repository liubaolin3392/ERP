<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

<!-- 登录专用 -->
	<package name="login" namespace="/" extends="struts-default">
	
		<action name="login_*"  class="com.chinasoft.web.action.LoginAction" method="{1}">
			<result name="failure">login.jsp</result>
			<result name="employee" type="redirect">employee/index.jsp</result>
			<result name="branchManager" type="redirect">branchManager/index.jsp</result>		
			<result name="president" type="redirect">president/index.jsp</result>					
		</action>
	
	</package>


<!-- 普通员工-->
	<package name="employee" namespace="/employee" extends="struts-default,json-default" >
	
		<action name="employee_*" class="com.chinasoft.web.action.EmployeeAction" method="{1}">
				<result type="json" name="update">
					<param name="root">msg</param>
				</result>
				<result name="contract">contract.jsp</result>
				<result name="trainApply">pt_Trainingapproval.jsp</result>
				<result name="addapply" type="redirectAction">employee_trainingapl.action</result>
				<result name="trainplan">pt_Trainingplan.jsp</result>
				<result name="feed">pt_myTraining.jsp</result>
				<result name="evalue">pt_Trainingevaluation.jsp</result>
				<result name="addevalue">pt_Trainingevaluation.jsp</result>				
				<result name="input">index.jsp</result>		
		</action>
	
	</package>


<!-- 总经理 -->
		<package name="president" namespace="/president" extends="struts-default,json-default">
		
		<action name="president_*" class="com.chinasoft.web.action.PresidentAction" method="{1}">
				<result name="toemployee">employee.jsp</result>
				<result type="json" name="update">
					<param name="root">msg</param>
				</result>
				<result type="json" name="delete">
					<param name="root">msg</param>
				</result>
				<result name="regist">employee.jsp</result>
				<result name="searchEmployee">employee.jsp</result>
		</action>
		
		</package>
	

</struts>    
